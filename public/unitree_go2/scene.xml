<mujoco model="go2 scene">
  <!-- Include shared environment settings -->
  <include file="../common/common_environment.xml"/>

  <!-- Include go2 robot definition -->
  <include file="go2.xml"/>

  <statistic center="0 0 0.1" extent="0.8"/>

  <worldbody>
    <!-- Floor plane with shared grid material -->
    <geom name="floor" size="0 0 .05" type="plane" material="grid" condim="3"/>

    <!-- Spotlight that follows the robot base -->
    <light name="spotlight" mode="targetbodycom" target="base" diffuse=".8 .8 .8" specular="0.3 0.3 0.3" pos="0 -6 4" cutoff="30"/>
  </worldbody>
</mujoco>
