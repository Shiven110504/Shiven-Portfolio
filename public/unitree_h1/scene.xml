<mujoco model="h1 scene">
  <!-- Include shared environment settings -->
  <include file="../common/common_environment.xml"/>

  <!-- Include h1 robot definition -->
  <include file="h1.xml"/>

  <statistic center="0 0 1" extent="1.8"/>

  <worldbody>
    <!-- Floor plane with shared grid material -->
    <geom name="floor" size="0 0 .05" type="plane" material="grid" condim="3"/>

    <!-- Spotlight that follows the robot pelvis -->
    <light name="spotlight" mode="targetbodycom" target="pelvis" diffuse=".8 .8 .8" specular="0.3 0.3 0.3" pos="0 -6 4" cutoff="30"/>
  </worldbody>

  <keyframe>
    <key name="home"
      qpos="
    0 0 0.98
    1 0 0 0
    0 0 -0.4 0.8 -0.4
    0 0 -0.4 0.8 -0.4
    0
    0 0 0 0
    0 0 0 0"/>
  </keyframe>
</mujoco>
